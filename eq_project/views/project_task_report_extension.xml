<?xml version="1.0" encoding="utf-8"?>

<odoo>

<template id="eq_project_task_report_extension" inherit_id="project_task_report.task_report">

  <xpath expr="//t[@t-call='report.external_layout']" position="replace">

         <div class="page">
                        <h2>Task: <span t-field="o.name"/></h2>
                        <table class="table table-bordered">
                            <tr>
                                <th>Project</th>
                                <td><span t-field="o.project_id.name"/></td>
                            </tr>
                            <tr>
                                <th>Assigned to</th>
                                <td><span t-field="o.user_id.name"/></td>
                            </tr>
                            <tr t-if="o.date_deadline">
                                <th>Deadline</th>
                                <td><span t-esc="o.date_deadline"/></td>
                            </tr>
                            <tr t-if="o.date_assign">
                                <th>Assigning Date</th>
                                <td><span t-esc="o.date_assign"/></td>
                            </tr>
                            <tr t-if="o.date_last_stage_update">
                                <th>Last Stage Update</th>
                                <td><span t-field="o.date_last_stage_update"/></td>
                            </tr>
                            <tr t-if="o.partner_id">
                                <th>Partner</th>
                                <td><span t-field="o.partner_id"/></td>
                            </tr>
                            <tr t-if="o.tag_ids">
                                <th>Tags</th>
                                <td>
                                    <span>| </span>
                                    <t t-foreach="o.tag_ids" t-as="tag">
                                        <span t-field="tag.name"/>
                                        <span>| </span>
                                    </t>
                                </td>
                            </tr>
                        </table>
                        <strong t-if="o.description">Description :</strong>
                        <span t-field="o.description"/>
          </div>


      <!--<t t-call="eq_base_report.eq_external_layout_footer"/>-->

  </xpath>


</template>

    <!--<record id="hr_timesheet.timesheet_report" model="ir.actions.report.xml">
